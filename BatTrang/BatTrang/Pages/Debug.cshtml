@page
@model BatTrang.Pages.DebugModel
@{
    ViewData["Title"] = "Debug Database";
}

<div class="container py-5">
    <h1>Debug Database</h1>
    
    <div class="row">
        <div class="col-12 col-md-6">
            <h3>Categories (@Model.Categories.Count)</h3>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var category in Model.Categories)
                        {
                            <tr>
                                <td>@category.Id</td>
                                <td>@category.Name</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        
        <div class="col-12 col-md-6">
            <h3>Products (@Model.Products.Count)</h3>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Category</th>
                            <th>Price</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model.Products)
                        {
                            <tr>
                                <td>@product.Id</td>
                                <td>@product.Name</td>
                                <td>@product.Category?.Name</td>
                                <td>@product.Price.ToString("C0")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    
    @if (!Model.Products.Any())
    {
        <div class="alert alert-warning">
            <h4>Không có sản phẩm nào trong database!</h4>
            <p>Hãy thêm dữ liệu mẫu vào database.</p>
        </div>
    }
    
    <div class="mt-4">
        <a href="/Products" class="btn btn-primary">Quay lại Products</a>
        <a href="/" class="btn btn-secondary">Về trang chủ</a>
    </div>
</div>
