@page
@model BatTrang.Pages.ProductsModel
@{
    ViewData["Title"] = "All Products";
}

<div class="container py-5">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="fw-bold text-center mb-3">Tất Cả Sản Phẩm</h1>
            <p class="text-muted text-center">Khám phá bộ sưu tập đầy đủ các sản phẩm gốm sứ Bát Tràng</p>
        </div>
    </div>

    <div class="row">
        <!-- Sidebar Categories -->
        <div class="col-12 col-lg-3 mb-4">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-filter me-2"></i>Danh Mục</h5>
                </div>
                <div class="card-body p-0">
                    <div class="list-group list-group-flush bt-category-filter">
                        <a href="/Products" class="list-group-item list-group-item-action @(Model.CategoryId == null ? "active" : "")">
                            <i class="fas fa-th-large me-2"></i>Tất Cả Sản Phẩm
                            <span class="badge bg-secondary float-end">@Model.CategoryProductCounts.Values.Sum()</span>
                        </a>
                        @foreach (var category in Model.Categories)
                        {
                            var productCount = Model.CategoryProductCounts.ContainsKey(category.Id) ? Model.CategoryProductCounts[category.Id] : 0;
                            <a href="/Products?categoryId=@category.Id" 
                               class="list-group-item list-group-item-action @(Model.CategoryId == category.Id ? "active" : "")">
                                <i class="fas fa-tag me-2"></i>@category.Name
                                <span class="badge bg-secondary float-end">@productCount</span>
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="col-12 col-lg-9">
            @if (Model.Products.Any())
            {
                <div class="row g-4 bt-product-grid">
                    @foreach (var product in Model.Products)
                    {
                        <div class="col-12 col-md-6 col-lg-4 col-xl-3">
                            <div class="card h-100 bt-card shadow-sm">
                                <div class="ratio ratio-4x3 rounded-top overflow-hidden">
                                    @if (!string.IsNullOrEmpty(product.ImageUrl))
                                    {
                                        <img src="@product.ImageUrl" class="w-100 h-100 object-fit-cover" alt="@product.Name" />
                                    }
                                    else
                                    {
                                        <div class="w-100 h-100 d-flex align-items-center justify-content-center bg-light">
                                            <i class="fas fa-image fa-2x text-muted"></i>
                                        </div>
                                    }
                                </div>
                                <div class="card-body d-flex flex-column">
                                    <h6 class="card-title mb-2">@product.Name</h6>
                                    <div class="small text-muted mb-2">
                                        <i class="fas fa-tag me-1"></i>@product.Category?.Name
                                    </div>
                                    @if (!string.IsNullOrEmpty(product.Description))
                                    {
                                        <p class="card-text small text-muted mb-3">@product.Description</p>
                                    }
                                    <div class="mt-auto">
                                        <div class="d-flex justify-content-between align-items-center mb-3">
                                            <span class="h5 text-success mb-0">@product.Price.ToString("C0")</span>
                                            <a href="#" class="btn btn-outline-primary btn-sm">Chi tiết</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <div class="row mt-4">
                    <div class="col-12">
                        <div class="d-flex justify-content-between align-items-center">
                            <p class="text-muted mb-0">
                                @if (Model.CategoryId.HasValue)
                                {
                                    var selectedCategory = Model.Categories.FirstOrDefault(c => c.Id == Model.CategoryId);
                                    <span>Hiển thị @Model.Products.Count sản phẩm trong danh mục "<strong>@selectedCategory?.Name</strong>"</span>
                                }
                                else
                                {
                                    <span>Hiển thị @Model.Products.Count sản phẩm</span>
                                }
                            </p>
                            @if (Model.CategoryId.HasValue)
                            {
                                <a href="/Products" class="btn btn-outline-secondary btn-sm">
                                    <i class="fas fa-times me-1"></i>Xóa bộ lọc
                                </a>
                            }
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="row">
                    <div class="col-12 text-center py-5">
                        <div class="mb-4">
                            <i class="fas fa-box-open fa-3x text-muted"></i>
                        </div>
                        <h4 class="text-muted">Chưa có sản phẩm nào</h4>
                        <p class="text-muted">
                            @if (Model.CategoryId.HasValue)
                            {
                                <span>Không có sản phẩm nào trong danh mục này.</span>
                            }
                            else
                            {
                                <span>Các sản phẩm sẽ được cập nhật sớm nhất.</span>
                            }
                        </p>
                        <a href="/" class="btn btn-outline-primary">Về trang chủ</a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>