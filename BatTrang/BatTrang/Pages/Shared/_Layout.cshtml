<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Bát Tràng Hamory</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BatTrang.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&family=Playfair+Display:wght@900&display=swap" rel="stylesheet">
</head>
<body>
    <header id="header" class="bt-header text-black">
        <!-- Top Bar -->
        <div class="header-top border-bottom py-2 d-none d-md-block">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-md-4">
                        <p class="mb-0 text-center text-md-start"><strong>Miễn phí vận chuyển</strong> cho đơn hàng trên 500.000đ</p>
                    </div>
                    <div class="col-md-4 text-center">
                        <a href="/" class="text-decoration-none text-black fw-bold">BÁT TRÀNG HAMORY</a>
                    </div>
                    <div class="col-md-4">
                        <ul class="d-flex justify-content-end gap-3 list-unstyled mb-0">
                            <li><a href="#" class="text-decoration-none text-black">Liên hệ</a></li>
                            <li><a href="/Cart" class="text-decoration-none text-black">Giỏ hàng</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Main Navigation -->
        <nav class="navbar navbar-expand-lg navbar-light border-bottom">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-page="/Index">
                    <img src="~/img/logo.png" class="bt-logo me-2" />
                    <span class="d-none d-md-inline">Bát Tràng Hamory</span>
                </a>
                <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#btNavbar" aria-controls="btNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="btNavbar">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0 align-items-center gap-lg-4 fw-bold">
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-page="/Index">Trang chủ</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-page="/Products">Sản phẩm</a></li>
                        <li class="nav-item"><a class="nav-link" href="#about">Giới thiệu</a></li>
                        <li class="nav-item">
                            <a class="nav-link"
                               href="#"
                               data-bs-toggle="offcanvas"
                               data-bs-target="#supportChat"
                               aria-controls="supportChat">
                                Hỗ trợ
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link position-relative" href="/Cart" aria-label="Cart">
                                <i class="fas fa-shopping-cart"></i>
                                <span id="cartCount" class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" style="display: none; font-size: 0.65em; padding: 0.25em 0.5em;">
                                    0
                                </span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <main role="main">
        @RenderBody()
    </main>

    <footer class="bt-footer border-top mt-5 pt-5 pb-4 bg-white">
        <div class="container">
            <div class="row gy-4">
                <div class="col-12 col-md-3">
                    <a class="navbar-brand d-flex align-items-center mb-2" asp-area="" asp-page="/Index">
                        <img src="~/img/logo.png" class="bt-logo me-2" />
                        @* <span class="fw-semibold">BÁT TRÀNG HAMORY</span> *@
                    </a>
                    <p class="small text-muted mb-0">Gốm sứ thủ công Việt Nam, phong cách hiện đại, câu chuyện ấm áp.</p>
                </div>
                <div class="col-6 col-md-2">
                    <h6 class="fw-semibold mb-3">Liên kết nhanh</h6>
                    <ul class="list-unstyled small">
                        <li><a class="link-secondary text-decoration-none" asp-area="" asp-page="/Index">Trang chủ</a></li>
                        <li><a class="link-secondary text-decoration-none" asp-area="" asp-page="/Products">Sản phẩm</a></li>
                        <li><a class="link-secondary text-decoration-none" href="#about">Giới thiệu</a></li>
                        @* <li><a class="link-secondary text-decoration-none" href="#support">Support</a></li> *@
                        <!-- trước đây: <a class="nav-link" href="#support">Support</a> -->
                        <a class="link-secondary text-decoration-none"
                           href="#"
                           data-bs-toggle="offcanvas"
                           data-bs-target="#supportChat"
                           aria-controls="supportChat">
                            Hỗ trợ
                        </a>

                    </ul>
                </div>
                <div class="col-6 col-md-4">
                    <h6 class="fw-semibold mb-3">Liên hệ</h6>
                    <div class="small text-muted">Làng nghề Bát Tràng - Gia Lâm - Hà Nội</div>
                    <div class="small text-muted">Điện thoại: 0123 456 789</div>
                    <div class="small text-muted">Email: info@battrang.vn</div>
                </div>
                <div class="col-12 col-md-3">
                    <h6 class="fw-semibold mb-3">Nhận tin tức</h6>
                    <form class="d-flex gap-2">
                        <input class="form-control" type="email" placeholder="Email của bạn" aria-label="Email" />
                        <button class="btn btn-outline-secondary" type="button">→</button>
                    </form>
                </div>
            </div>
            <div class="d-flex justify-content-between align-items-center mt-4 pt-3 border-top small text-muted">
                <div>© 2025 BÁT TRÀNG HAMORY. Tất cả quyền được bảo lưu.</div>
                <div><a class="link-secondary text-decoration-none" asp-area="" asp-page="/Privacy">Chính sách</a></div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Cart Count Script -->
    <script>
        // Load cart count on page load
        document.addEventListener('DOMContentLoaded', function() {
            fetch('/Cart?handler=CartCount')
                .then(response => response.json())
                .then(data => {
                    const cartCountElement = document.getElementById('cartCount');
                    if (cartCountElement) {
                        cartCountElement.textContent = data.cartCount;
                        cartCountElement.style.display = data.cartCount > 0 ? 'inline' : 'none';
                    }
                })
                .catch(error => {
                    console.error('Error loading cart count:', error);
                });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)

    <div class="offcanvas offcanvas-end" tabindex="-1" id="supportChat" aria-labelledby="supportChatLabel" style="width:380px;">
        <div class="offcanvas-header border-bottom">
            <h5 class="offcanvas-title" id="supportChatLabel">Chat hỗ trợ AI</h5>
            <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>

        <div class="offcanvas-body d-flex flex-column gap-2">
            <div id="chatMessages" class="flex-grow-1 overflow-auto border rounded p-2 small"
                 style="min-height:300px;max-height:60vh;">
                <!-- messages appear here -->
            </div>

            <form id="chatForm" class="d-flex gap-2">
                <input id="chatInput" class="form-control" type="text" placeholder="Nhập câu hỏi..." autocomplete="off" />
                <button class="btn btn-primary" type="submit">Gửi</button>
            </form>

            <div class="text-muted small" id="typing" style="display:none;">AI đang trả lời…</div>
        </div>
    </div>

    <style>
        #chatMessages .msg{margin-bottom:.5rem}
        #chatMessages .msg.user{text-align:right}
        #chatMessages .bubble{display:inline-block;padding:.5rem .75rem;border-radius:.75rem}
        #chatMessages .user .bubble{background:#e9f5ff}
        #chatMessages .ai .bubble{background:#f6f6f6}
    </style>


</body>
</html>