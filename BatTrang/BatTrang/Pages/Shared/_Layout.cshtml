<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Bat Trang Hamory</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BatTrang.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
</head>
<body>
    <header class="bt-header border-bottom bg-white">
        <nav class="navbar navbar-expand-lg navbar-light">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-page="/Index">
                    <img src="~/img/logo.png" class="bt-logo me-2" />
                    <span class="fw-semibold">BÁT TRÀNG HAMORY</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#btNavbar" aria-controls="btNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="btNavbar">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0 align-items-lg-center gap-lg-3">
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-page="/Index">Home</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-page="/Products">Products</a></li>
                        <li class="nav-item"><a class="nav-link" href="#about">About us</a></li>
                        @* <li class="nav-item"><a class="nav-link" href="#support">Support</a></li> *@
                        <li class="nav-item">
                            <a class="nav-link"
                               href="#"
                               data-bs-toggle="offcanvas"
                               data-bs-target="#supportChat"
                               aria-controls="supportChat">
                                Support
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link position-relative" href="/Cart" aria-label="Cart">
                                <i class="fas fa-shopping-cart"></i>
                                <span id="cartCount" class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" style="display: none;">
                                    0
                                </span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container py-3">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="bt-footer border-top mt-5 pt-5 pb-4 bg-white">
        <div class="container">
            <div class="row gy-4">
                <div class="col-12 col-md-3">
                    <a class="navbar-brand d-flex align-items-center mb-2" asp-area="" asp-page="/Index">
                        <img src="~/img/logo.png" class="bt-logo me-2" />
                        <span class="fw-semibold">BÁT TRÀNG HAMORY</span>
                    </a>
                    <p class="small text-muted mb-0">Handcrafted pottery made in Việt Nam, modern styles, plus a calming story.</p>
                </div>
                <div class="col-6 col-md-2">
                    <h6 class="fw-semibold mb-3">Quick Links</h6>
                    <ul class="list-unstyled small">
                        <li><a class="link-secondary text-decoration-none" asp-area="" asp-page="/Index">Home</a></li>
                        <li><a class="link-secondary text-decoration-none" asp-area="" asp-page="/Products">Products</a></li>
                        <li><a class="link-secondary text-decoration-none" href="#about">About</a></li>
                        @* <li><a class="link-secondary text-decoration-none" href="#support">Support</a></li> *@
                        <!-- trước đây: <a class="nav-link" href="#support">Support</a> -->
                        <a class="link-secondary text-decoration-none"
                           href="#"
                           data-bs-toggle="offcanvas"
                           data-bs-target="#supportChat"
                           aria-controls="supportChat">
                            Support
                        </a>

                    </ul>
                </div>
                <div class="col-6 col-md-4">
                    <h6 class="fw-semibold mb-3">Contact</h6>
                    <div class="small text-muted">Làng nghề Bát Tràng - Gia Lâm - Hà Nội</div>
                    <div class="small text-muted">Phone: 0123 456 789</div>
                    <div class="small text-muted">Email: info@battrang.vn</div>
                </div>
                <div class="col-12 col-md-3">
                    <h6 class="fw-semibold mb-3">Newsletter</h6>
                    <form class="d-flex gap-2">
                        <input class="form-control" type="email" placeholder="Your email" aria-label="Email" />
                        <button class="btn btn-outline-secondary" type="button">→</button>
                    </form>
                </div>
            </div>
            <div class="d-flex justify-content-between align-items-center mt-4 pt-3 border-top small text-muted">
                <div>© 2025 BÁT TRÀNG HAMORY. All rights reserved.</div>
                <div><a class="link-secondary text-decoration-none" asp-area="" asp-page="/Privacy">Privacy</a></div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Cart Count Script -->
    <script>
        // Load cart count on page load
        document.addEventListener('DOMContentLoaded', function() {
            fetch('/Cart?handler=CartCount')
                .then(response => response.json())
                .then(data => {
                    const cartCountElement = document.getElementById('cartCount');
                    if (cartCountElement) {
                        cartCountElement.textContent = data.cartCount;
                        cartCountElement.style.display = data.cartCount > 0 ? 'inline' : 'none';
                    }
                })
                .catch(error => {
                    console.error('Error loading cart count:', error);
                });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)

    <div class="offcanvas offcanvas-end" tabindex="-1" id="supportChat" aria-labelledby="supportChatLabel" style="width:380px;">
        <div class="offcanvas-header border-bottom">
            <h5 class="offcanvas-title" id="supportChatLabel">Chat hỗ trợ AI</h5>
            <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>

        <div class="offcanvas-body d-flex flex-column gap-2">
            <div id="chatMessages" class="flex-grow-1 overflow-auto border rounded p-2 small"
                 style="min-height:300px;max-height:60vh;">
                <!-- messages appear here -->
            </div>

            <form id="chatForm" class="d-flex gap-2">
                <input id="chatInput" class="form-control" type="text" placeholder="Nhập câu hỏi..." autocomplete="off" />
                <button class="btn btn-primary" type="submit">Gửi</button>
            </form>

            <div class="text-muted small" id="typing" style="display:none;">AI đang trả lời…</div>
        </div>
    </div>

    <style>
        #chatMessages .msg{margin-bottom:.5rem}
        #chatMessages .msg.user{text-align:right}
        #chatMessages .bubble{display:inline-block;padding:.5rem .75rem;border-radius:.75rem}
        #chatMessages .user .bubble{background:#e9f5ff}
        #chatMessages .ai .bubble{background:#f6f6f6}
    </style>


</body>
</html>